@model MoldovaHotelsCore.GlobalWebSite.Models.Hotel

@{
    ViewData["Title"] = "Show";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        @Model.Name
    </div>
    <div class="col-md-6">
        <p>@Model.Description</p>
    </div>
</div>

<table class="table table-bordered rooms-list">
    <thead>
        <tr>
            <th>Name</th>
            <th colspan="2">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Rooms)
        {
            <tr>
                <td>@room.Name</td>
                <td>@room.Price</td>
                <td>
                    <form action="@Url.Action("New", "Bookings", new { roomId = room.RoomId })" method="GET">
                        <button class="btn btn-primary" type="submit">Book</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>